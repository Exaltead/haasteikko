{
  "name": "haasteikko",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=frontend && cargo build --release",
    "dev": "npm run dev --workspace=frontend",
    "start:backend": "cd packages/backend && cargo run",
    "start:frontend": "npm run dev --workspace=frontend",
    "start:all": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "test": "npm test --workspace=frontend",
    "test:e2e": "npm run test:e2e --workspace=frontend",
    "lint": "npm run lint --workspace=frontend",
    "format": "npm run format --workspace=frontend",
    "clean": "rm -rf packages/backend/target packages/frontend/dist",
    "setup": "npm install && cargo fetch"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}